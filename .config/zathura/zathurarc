unmap [fullscreen] R # reload
unmap [fullscreen] a # fit
unmap [fullscreen] s # fit
unmap [fullscreen] d # multipage toggle
unmap [fullscreen] zI # Zooming
unmap [fullscreen] zO # Zooming
