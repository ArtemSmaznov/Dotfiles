unmap <Space> # Scroll a full page left, down, up or right
unmap t       # scroll full page left
unmap f       # follow
unmap r       # rotate
unmap R       # reload
unmap a       # fit
unmap s       # fit
unmap d       # multipage toggle
unmap zI      # Zooming
unmap zO      # Zooming
unmap z0      # Zooming
unmap zi      # Zooming
unmap zo      # Zooming

